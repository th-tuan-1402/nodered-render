# Port for Node-RED UI
PORT=3000

# Admin authentication (hashed password must be generated separately)
ADMIN_USERNAME=
ADMIN_PASSWORD_HASH=

# Flow file configuration
FLOW_FILE=flows.json
FLOW_FILE_PRETTY=true

# Security settings
CREDENTIAL_SECRET=a-secret-key

# Logging level
LOG_LEVEL=info

# MQTT and serial port reconnect time (in milliseconds)
MQTT_RECONNECT_TIME=15000
SERIAL_RECONNECT_TIME=15000

# Runtime state
RUNTIME_STATE_ENABLED=false
RUNTIME_STATE_UI=false
